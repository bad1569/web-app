<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <title>Items</title>
</head>
<body>
  <div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold mb-4">Items</h1>
    <form action="/items" method="POST" class="mb-4">
      <input type="text" name="name" placeholder="Name" required class="border p-2">
      <input type="text" name="description" placeholder="Description" class="border p-2">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2">Add Item</button>
    </form>
    <ul>
      <% items.forEach(item => { %>
        <li>
          <%= item.name %> - <%= item.description %>
          <form action="/items/<%= item.id %>" method="POST" style="display: inline;">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
